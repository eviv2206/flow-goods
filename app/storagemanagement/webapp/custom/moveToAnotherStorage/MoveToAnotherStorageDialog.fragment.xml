<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:macros="sap.fe.macros"
    xmlns:macrosField="sap.fe.macros.field"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="idMoveToAnotherStorageDialog"
        title="{i18n>com.storagemanagement.moveToStorage.label}"
        contentWidth="250px"
    >
        <content>
            <f:SimpleForm
                id="idMoveToAnotherStorageForm"
                validateFieldGroup="onValidateEditCaseFieldGroup"
                editable="true"
                layout="ResponsiveGridLayout"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                labelSpanXL="12"
                labelSpanL="12"
                labelSpanM="12"
            >
                <f:content>
                    <Label
                        id="idProductNameLabel"
                        text="{i18n>com.storagemanagement.product.name.label}"
                        showColon="true"
                    />
                    <Text
                        id="idProductNameText"
                        text="{product/name}"
                    />

                    <Label
                        id="idStorageLabel"
                        text="{i18n>com.storagemanagement.storageToMove.label}"
                        class="sapUiSmallMarginEnd"
                        showColon="true"
                        required="true"
                    />
                    <macros:Field
                        id="idStorageToMoveField"
                        contextPath="/ProductStorageMap"
                        metaPath="storage_ID"
                        value="{appData>/storage}"
                        change="validateMacrosField"
                    />

                    <Label
                        id="idQuantityToMoveLabel"
                        text="{i18n>com.storagemanagement.quantityToMove.label}"
                        class="sapUiSmallMarginEnd"
                        showColon="true"
                        required="true"
                    />

                    <macros:Field
                        id="idQuantityToMoveField"
                        contextPath="/ProductStorageMap"
                        metaPath="quantityRemain"
                        change="validateMacrosField"
                    />
                </f:content>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button
                id="idMoveButton"
                type="Emphasized"
                text="{i18n>com.storagemanagement.move.button}"
                press="onMoveButtonPress"
                enabled="false"
            />
            <Button
                id="idCancelCaseButton"
                text="{i18n>com.storagemanagement.cancel.button}"
                press="onCancelButtonPress"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
